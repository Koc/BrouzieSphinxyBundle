<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="brouzie.sphinxy.logger.class">Brouzie\Bundle\SphinxyBundle\Logger\SphinxyLogger</parameter>
    </parameters>

    <services>
        <service id="brouzie.sphinxy.logger" class="%brouzie.sphinxy.logger.class%" public="false">
            <tag name="monolog.logger" channel="sphinxy" />
            <argument type="service" id="logger" on-invalid="null" />
            <argument type="service" id="debug.stopwatch" on-invalid="null" />
        </service>
    </services>

</container>
